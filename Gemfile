source 'http://rubygems.org'

gem 'rails', '3.1.2'
gem 'json'
gem 'sqlite3'
gem 'therubyracer'
gem 'fastercsv'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

# To use debugger
group :development, :test do
  gem 'ruby-debug'
  gem 'rspec-rails'
  gem 'capistrano'
  gem 'unicorn'
end
